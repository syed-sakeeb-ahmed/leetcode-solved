class Solution {
public:
    int longestCommonSubsequence(string text1, string text2) {
        if (text1.length() == 0 || text2.length() == 0) return 0;
        if (text1.length() > text2.length()) return longestCommonSubsequence(text2, text1);
        int m = text1.length();
        int n = text2.length();
        vector<vector<int>> r(m + 1, vector<int>(n + 1, 0));

        for (int i = 1; i < m + 1; i++) {
            for (int j = 1; j < n + 1; j++) {
                if (text1[i - 1] == text2[j - 1]) {
                    r[i][j] = r[i -1][j - 1] + 1;
                }
                else r[i][j] = max(r[i][j - 1], r[i - 1][j]);
            }
        }
        return r[m][n];
    }
};