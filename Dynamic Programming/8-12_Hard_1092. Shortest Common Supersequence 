class Solution {
public:
    string shortestCommonSupersequence(string str1, string str2) {
        int m = str1.length();
        int n = str2.length();

        vector<string> r(n + 1, "");
        
        for (int i = 1; i < n + 1; i++) r[i] = r[i-1] + str2[i-1];
        
        for (int i = 1; i< m+1;i++) {
            vector<string> c(n + 1, "");
            c[0] = str1.substr(0, i);
            for (int j = 1; j< n+1; j++) {
                if (str1[i - 1] == str2[j - 1]) {
                    c[j] = r[j - 1] + str1[i-1];
                }
                else {
                    c[j] = (r[j].length() < c[j-1].length()) ? (r[j] +str1[i - 1]) : (c[j-1] + str2[j - 1]);
                }
            }
            r = c;
        }

        return r[n];
    }
};