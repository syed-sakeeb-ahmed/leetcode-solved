class Solution {
public:
    int minDistance(string word1, string word2) {
        int m = word1.length();
        int n = word2.length();
        vector<vector<int>> r(m + 1, vector<int>(n + 1, 0));

        for (int i = 0; i < m + 1; i++) {
            r[i][0] = i;
        }
        for (int i = 0; i < n + 1; i++) {
            r[0][i] = i;
        }

        for (int i = 1; i < m + 1; i++) {
            for (int j = 1; j < n + 1; j++) {
                if (word1[i - 1] == word2[j - 1]) r[i][j] = r[i - 1][j - 1];
                else {
                    r[i][j] = min({r[i - 1][j] + 1, r[i][j - 1] + 1, 1 + r[i - 1][j - 1]});
                }
            }
        }

        return r[m][n];
    }
};