class Solution {
public:
    int minPathSum(vector<vector<int>>& grid) {
        if (grid.size() == 0) return 0;
        int m = grid.size();
        int n = grid[0].size();
        vector<vector<int>> r(m, vector<int>(n, INT_MAX));
        r[0][0] = 0;
        for (int i = 0; i < m; i++) {
            for (int j = 0; j < n; j++) {
                int up = (i - 1 >= 0) ? r[i - 1][j] : INT_MAX;
                int left = (j - 1 >= 0) ? r[i][j - 1] : INT_MAX;
                r[i][j] = min({up, left, r[i][j]}) + grid[i][j];
            }
        }
        return r[m - 1][n - 1];
    }
};