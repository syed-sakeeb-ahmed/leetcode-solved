class Solution {
public:
    long long mostPoints(vector<vector<int>>& questions) {
        
        long n = questions.size();
        
        vector<long long> r(n + 1, 0);
        r[n] = 0;

        for (int i = n - 1; i >= 0; i--) {
            long p = questions[i][0];
            long b = questions[i][1];
            r[i] = max(r[i + 1], p + r[min(i + b + 1, n)]);
        }
        
        return r[0];
    }
};