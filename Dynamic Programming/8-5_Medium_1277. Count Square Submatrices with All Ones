class Solution {
public:
    int countSquares(vector<vector<int>>& matrix) {
        if (matrix.size() == 0) return 0;
        int m = matrix.size();
        int n = matrix[0].size();
        vector<vector<int>> r(m, vector<int>(n, 0));
        int count = 0;
        for (int i = 0; i < m; i++) {
            for (int j = 0; j < n; j++) {
                if (matrix[i][j] == 1) {
                    int left = (j - 1 >=0) ? r[i][j - 1] : 0;
                int up = (i - 1 >= 0) ? r[i - 1][j] : 0;
                int diag = (j-1 >= 0 && i - 1 >= 0) ? r[i - 1][j-1] : 0;
                int val = min({left, up, diag});
                r[i][j] = val + matrix[i][j];
                if (r[i][j] > val) count += r[i][j];
                }
                
            }
        }
        return count;
    }
};