class Solution {

public:
    int minCostClimbingStairs(vector<int>& cost) {
        int n = cost.size();
        vector<int> r (n + 1, -1);
        r[0] = cost[0];
        r[1] = cost[1];

        for (int i = 2; i <= n; i++) {
            int tempCost = (i == n) ? 0 : cost[i];
            r[i] = min(r[i - 1], r[i - 2]) + tempCost;
        }

        return r[n];
    }
};