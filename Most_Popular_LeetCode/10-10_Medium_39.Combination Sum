class Solution {
public:
    vector<vector<int>> res;
    vector<int> temp;
    void aux(vector<int>& c, int target, int start) {
        if (target < 0) return;
        if (target == 0) {
            res.push_back(temp);
            return;
        }
        for (int i = start; i < c.size(); i++) {
            temp.push_back(c[i]);
            aux(c, target - c[i], i);
            temp.pop_back();
        }
    }

    vector<vector<int>> combinationSum(vector<int>& candidates, int target) {
        aux(candidates, target, 0);
        return res;
    }
};