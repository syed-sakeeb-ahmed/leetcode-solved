class Solution {
pair<int,int> getIndex(int num, int m, int n) {
    int a = num / n;
    int b = num % n;
    return {a,b};
}
public:
    bool searchMatrix(vector<vector<int>>& matrix, int target) {
        int m = matrix.size();
        int n = matrix[0].size();
        int left = 0;
        int right = m * n - 1;
        while (left <= right) {
            int mid = (left + right) / 2;
            auto item = getIndex(mid,m,n);
            long temp = matrix[item.first][item.second];
            if (temp == target) return true;
            else if (temp < target) {
                left = mid + 1;
            }
            else if (temp > target) {
                right = mid - 1;
            }
        }
        return false;
    }
};