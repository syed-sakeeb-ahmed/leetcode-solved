/**
 * Definition for singly-linked list.
 * struct ListNode {
 *     int val;
 *     ListNode *next;
 *     ListNode() : val(0), next(nullptr) {}
 *     ListNode(int x) : val(x), next(nullptr) {}
 *     ListNode(int x, ListNode *next) : val(x), next(next) {}
 * };
 */
class Solution {
public:
    ListNode* removeNthFromEnd(ListNode* head, int n) {
        int size = 0;
        ListNode* curr = head;
        while (curr != nullptr) {
            size++;
            curr = curr->next;
        }
        curr = head;
        ListNode* prev = nullptr;
        int val = size - n;
        size = 0;
        while (curr != nullptr) {
            if (size == val) break;
            size++;
            prev = curr;
            curr = curr->next;
        }
        if (prev == nullptr) {
            return head->next;
        }
        prev->next = curr->next;
        return head;
    }
};