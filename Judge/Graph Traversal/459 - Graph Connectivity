#include <stdio.h>
#include <iostream>
#include <string>
#include <vector>
#include <sstream>
using namespace std;
int g(char c) {
    return (c - 65 + 1);
}

void dfs(int node, vector<int>& visited, vector<vector<int>>& adj) {
    visited[node] = 1;
    for (int i = 0; i < adj[node].size(); i++) {
        int nei = adj[node][i];
        if (!visited[nei]) {
            dfs(nei, visited, adj);
        }
    }
}
int main() {
    int n;
    scanf("%d ", &n);
    string str;
    char k;
    vector<vector<int>> adj;
    vector<int> visited;
    int size = 0;
    int cc = 0;
    
    while (getline(cin,str)) {
        if (str.length() == 0) {
            for (int i = 1; i < size + 1; i++) {
                if (!visited[i]) {
                    dfs(i, visited, adj);
                    cc++;
                }
            }
            n--;
            cout << cc << "\n\n";
        }
        else if (str.length() == 1) {
            cc = 0;
            k = str[0];
            size = g(k);
            adj.assign(size + 1, vector<int>());
            visited.assign(size+1, 0);
        }
        else if (str.length() == 2) {
            int u = g(str[0]);
            int v = g(str[1]);
            adj[u].push_back(v);
            adj[v].push_back(u);
        }
        
    }
    
    for (int i = 1; i < size + 1; i++) {
                if (!visited[i]) {
                    dfs(i, visited, adj);
                    cc++;
                }
            }
            n--;
            cout << cc << "\n\n";
    
    return 0;
}